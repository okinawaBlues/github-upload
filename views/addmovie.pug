doctype html
html
  head
    title Add movie
    link(link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body.container
    h1 New movie
    div.input-group.mb-3
    form(action='/addmovie', method='POST', class="form-signin")
      div.container.input-group.mb-3
        input(type="text", name="title", placeholder="Title", required autofocus class="form-control")
      div.container.input-group.mb-3
        input(type="text", name="director", placeholder="Director", required autofocus class="form-control")
      div.container.input-group.mb-3
        input(type="number", name="year", placeholder="Year", required autofocus class="form-control")
      div.container.input-group.mb-3
        input(type="submit", value="Add").btn.btn-primary